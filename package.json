    "wait-server": "wait-on http://localhost:3000 && npm run dev-server",
    "dev-server": "npm run start --prefix server"
  },
  "dependencies": {
    "nodemailer": "^6.9.16",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-scripts": "^5.0.1"
  },
  "devDependencies": {
    "wait-on": "^5.3.0"
  }
}
